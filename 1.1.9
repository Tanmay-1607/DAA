# include<stdio.h>
void knapsack(int n, float weight[], float profit[], float capacity) {

	float ratio[n], temp;
	int i,j;
	float total_profit = 0.0;

	for(i=0; i<n; i++)
		ratio[i] = profit[i] / weight[i];
	for(i=0; i<n-1; i++) {
		for (j=i+1; j<n; j++) {
			if (ratio[i] < ratio[j]) {
				temp = ratio[i];
				ratio[i] = ratio[j];
				ratio[j] = temp;
					
				temp = weight[i];
				weight[i] = weight[j];
				weight[j] = temp;
					
				temp = profit[i];
				profit[i] = profit[j];
				profit[j] = temp;
			}
		}
	}

	for(i=0; i<n; i++) {
		if(capacity>=weight[i]) {
			capacity -= weight[i];
			total_profit += profit[i];
		}
		else {
			total_profit += (capacity/weight[i]) * profit[i];
			break;
		}
}
